

@model System.Data.DataTable


@{
    ViewBag.Title = "Index";

}

<table class="table table-bordered table-striped">
    <tr>

        <th>Product Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
    </tr>

    @for (int i = 0; i < Model.Rows.Count; i++)
    {

        <tr>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4] </td>
            <td>
                <div> <a href="@Url.Action("Edit", "Product", new {@id=@Model.Rows[i][0] }))"> Edit</a></div>
                <div><a href="@Url.Action("Delete", "Product", new {@id=@Model.Rows[i][0] })">Delete</a></div>
            </td>
        </tr>
    }
    <tr>

        <td colspan="3"><b>Grand Total</b>  </td>
        <td><b>@ViewBag.Gtotal</b></td>
        <td></td>
    </tr>
</table>

